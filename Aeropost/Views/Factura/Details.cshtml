@model Aeropost.Models.Factura

@{
    ViewData["Title"] = "Detalle de Factura";
}

<div class="container py-4">
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-auto">
            <h1 class="display-5 fw-bold text-primary mb-0">
                <i class="bi bi-receipt me-2"></i>Detalle de Factura
            </h1>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm me-2">
                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-pencil-square me-2"></i>Editar
            </a>
        </div>
    </div>

    <div class="table-responsive mb-3">
        <table class="table">
            <tbody>
                <tr>
                    <th class="w-25">Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Número de factura</th>
                    <td>@Model.NumeroFactura</td>
                </tr>
                <tr>
                    <th>Número de tracking</th>
                    <td>@Model.NumeroTracking</td>
                </tr>
                <tr>
                    <th>Cédula cliente</th>
                    <td>@Model.CedulaCliente</td>
                </tr>
                <tr>
                    <th>Fecha de entrega</th>
                    <td>@Model.FechaEntrega.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Monto total</th>
                    <td>@Model.MontoTotal</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
