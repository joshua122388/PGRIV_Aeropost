@model IEnumerable<Aeropost.Models.Factura>

    @{
    ViewData["Title"] = "Index";
    }

    <div class="container py-4">
        <div class="row justify-content-between align-items-center mb-4">
            <div class="col-auto">
                <!-- Título principal de la sección -->
                <h1 class="display-5 fw-bold text-primary mb-0">
                    <i class="bi bi-receipt me-2"></i>Facturas
                </h1>
            </div>
            <div class="col-auto">
                <!-- Botón para crear una nueva factura -->
                <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-square me-2"></i>Crear Nueva
                </a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroFactura)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroTracking)</th>
                    <th>@Html.DisplayNameFor(model => model.CedulaCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaEntrega)</th>
                    <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroFactura)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroTracking)</td>
                    <td>@Html.DisplayFor(modelItem => item.CedulaCliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
