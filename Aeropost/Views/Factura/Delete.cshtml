@model Aeropost.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<div class="container py-4">
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-auto">
            <!-- Título principal -->
            <h1 class="display-5 fw-bold text-danger mb-0">
                <i class="bi bi-receipt me-2"></i>Eliminar Factura
            </h1>
            <p class="text-muted mb-0">¿Está seguro que desea eliminar esta factura?</p>
        </div>
        <div class="col-auto">
            <!-- Botón volver -->
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Esta acción no se puede deshacer.
    </div>

    <div class="table-responsive mb-4">
        <table class="table">
            <tbody>
                <tr>
                    <th class="w-25">Número de factura</th>
                    <td>@Html.DisplayFor(model => model.NumeroFactura)</td>
                </tr>
                <tr>
                    <th>Número de tracking</th>
                    <td>@Html.DisplayFor(model => model.NumeroTracking)</td>
                </tr>
                <tr>
                    <th>Cédula cliente</th>
                    <td>@Html.DisplayFor(model => model.CedulaCliente)</td>
                </tr>
                <tr>
                    <th>Fecha de entrega</th>
                    <td>@Html.DisplayFor(model => model.FechaEntrega)</td>
                </tr>
                <tr>
                    <th>Monto total</th>
                    <td>@Html.DisplayFor(model => model.MontoTotal)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                <i class="bi bi-trash3-fill me-2"></i>Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle me-2"></i>Cancelar
            </a>
        </div>
    </form>
</div>