@model Aeropost.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h1>Ingrese sus credenciales</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- logica para mostrar mensaje de error si login es invalido esta pendiente-->/>
            <div class="form-group">
                <label asp-for="User" class="control-label">Nombre de Usuario</label>
                <input name="usuario" type="text" class="form-control" placeholder="Ingrese un nombre de usuario" required />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label">Clave</label>
                <input name="password" type="password" class="form-control" placeholder="Ingrese una contraseña" required />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>