@model IEnumerable<Aeropost.Models.Bitacora>

    @{
    ViewData["Title"] = "Index";
    }

    <div class="container py-4">
        <div class="row justify-content-between align-items-center mb-4">
            <div class="col-auto">
                <!-- Título principal de la sección -->
                <h1 class="display-5 fw-bold text-primary mb-0">
                    <i class="bi bi-journal-check me-2"></i>Registro de Usuarios con login exitoso
                </h1>
            </div>
            <div class="col-auto">
                <!-- Acción típica para este listado (no se crean entradas manualmente) -->
                <a asp-action="Index" class="btn btn-outline-primary btn-lg shadow-sm">
                    <i class="bi bi-arrow-repeat me-2"></i>Actualizar
                </a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.User)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaHora)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.User)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td></td>
                </tr>
        }
            </tbody>
        </table>
    </div>
