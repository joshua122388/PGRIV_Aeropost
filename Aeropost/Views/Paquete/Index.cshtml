@model IEnumerable<Aeropost.Models.Paquete>

    @{
    ViewData["Title"] = "Index";
    }

    <div class="container py-4">
        <div class="row justify-content-between align-items-center mb-4">
            <div class="col-auto">
                <!-- Título principal de la sección -->
                <h1 class="display-5 fw-bold text-primary mb-0">
                    <i class="bi bi-box-seam me-2"></i>Paquetes
                </h1>
            </div>
            <div class="col-auto">
                <!-- Botón para crear un nuevo paquete -->
                <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-square me-2"></i>Crear Nuevo
                </a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.CedulaCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.TiendaOrigen)</th>
                    <th>@Html.DisplayNameFor(model => model.Peso)</th>
                    <th>@Html.DisplayNameFor(model => model.ValorTotal)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductosEspeciales)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroTracking)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.CedulaCliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.TiendaOrigen)</td>
                    <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValorTotal)</td>
                    <td>
                        @* Mostrar “Sí/No” para productos especiales (similar a tu ejemplo de asteriscos) *@
                        @{
                        var especial = item.ProductosEspeciales ? "Sí" : "No";
                        }
                        @especial
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroTracking)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
