@model IEnumerable<Aeropost.Models.Cliente>

    @{
    // Título de la página
    ViewData["Title"] = "Clientes";
    }

    <div class="container py-4">
        <div class="row justify-content-between align-items-center mb-4">
            <div class="col-auto">
                <!-- Título principal de la sección -->
                <h1 class="display-5 fw-bold text-primary mb-0">
                    <i class="bi bi-people-fill me-2"></i>Clientes
                </h1>
            </div>
            <div class="col-auto">
                <!-- Botón para crear un nuevo cliente -->
                <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-person-plus-fill me-2"></i>Crear Nuevo
                </a>
            </div>
        </div>

        <!-- Tabla que muestra la lista de clientes -->
        <table class="table table-hover align-middle shadow-sm rounded">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>@Html.DisplayNameFor(model => model.DireccionEntrega)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <!-- Muestra los datos de cada cliente -->
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DireccionEntrega)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>
                        <!-- Botón para editar el cliente -->
                        @Html.ActionLink("Editar", "Edit", new { cedula = item.Cedula }, new { @class = "btn btn-primary" }) |
                        <!-- Botón para eliminar el cliente -->
                        @Html.ActionLink("Eliminar", "Delete", new { cedula = item.Cedula }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
